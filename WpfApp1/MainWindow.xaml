        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Họ đệm : " HorizontalAlignment="Left" Margin="140,72,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Label Content="Tên : " HorizontalAlignment="Left" Margin="140,123,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Label Content="Giới tính : " HorizontalAlignment="Left" Margin="140,175,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Label Content="Ngoại ngữ : " HorizontalAlignment="Left" Margin="140,226,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Label Content="Quê quán : " HorizontalAlignment="Left" Margin="140,276,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Button Name="btnXem" Content="Xem thông tin" HorizontalAlignment="Left" Margin="231,372,0,0" VerticalAlignment="Top" Click="Xem_Click" Height="31" Width="91"/>
        <Button Name="btnNhap" Content="Nhập lại" HorizontalAlignment="Left" Margin="400,372,0,0" VerticalAlignment="Top" Height="31" Width="85" Click="Nhap_Click"/>
        <TextBox Name="txtHodem" HorizontalAlignment="Left" Margin="330,72,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox Name="txtTen" HorizontalAlignment="Left" Margin="330,123,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="120" Height="26"/>
        <RadioButton GroupName="gt" Name="radNam" Content="Nam" IsChecked="True" HorizontalAlignment="Left" Margin="330,181,0,0" VerticalAlignment="Top"/>
        <RadioButton GroupName="gt" Name="radNu" Content="Nữ" HorizontalAlignment="Left" Margin="435,181,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="chkAnh" Content="Tiếng Anh" IsChecked="True" HorizontalAlignment="Left" Margin="330,237,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="chkTrung" Content="Tiếng Trung" HorizontalAlignment="Left" Margin="435,237,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cboQue" HorizontalAlignment="Left" Margin="330,289,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem>Hà Nội</ComboBoxItem>
            <ComboBoxItem>Sài Gòn</ComboBoxItem>
            <ComboBoxItem>Hải Phòng</ComboBoxItem>
            <ComboBoxItem>Huế</ComboBoxItem>
        </ComboBox>


    </Grid>
</Window>
